{
  "rules": {
    "users": {
      "$userId": {
        ".read": true,
        ".write": "auth.uid === $userId"
      }
    },
    "leaderboard": {
      ".read": true,
      ".indexOn": "score",
      "$solutionId": {
        ".write": "auth.uid !== null && (!data.exists() || auth.uid === data.child('uid').val())",
        ".validate": "!newData.hasChild('average') && !newData.hasChild('points') && !newData.hasChild('score')"
      }
    },
    "leaderboardSolutions": {
      "$userId": {
        ".read": "auth.uid === $userId",
        ".write": "auth.uid === $userId"
      }
    },
    "solutions": {
      "$userId": {
        ".read": "auth.uid === $userId",
        ".write": "auth.uid === $userId"
      }
    }
  }
}
