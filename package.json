{
  "name": "snake",
  "description": "Snake Heuristics a game of pathfinding",
  "scripts": {
    "build": "rm -rf public && parcel build src/index.html -d public && react-snap",
    "deploy": "firebase deploy",
    "lint:css": "stylelint src/**/*.css",
    "lint:js": "eslint src/**/*.ts src/**/*.tsx",
    "lint": "yarn lint:js && yarn lint:css",
    "serve": "superstatic ./public --port 4000 -c superstatic.json",
    "start": "rm -rf dist && parcel src/index.html --port 4000 -d dist --no-cache --no-autoinstall"
  },
  "repository": "https://git@github.com/HHogg/snake.git",
  "author": "Harry Hogg <harry@hogg.io>",
  "license": "MIT",
  "dependencies": {
    "@svgr/parcel-plugin-svgr": "^5.3.0",
    "autoprefixer": "^9.7.4",
    "babel-eslint": "^8.2.2",
    "brace": "^0.11.1",
    "caniuse-lite": "^1.0.30000697",
    "classnames": "^2.2.5",
    "parcel-bundler": "^1.12.4",
    "postcss-preset-env": "^6.7.0",
    "preshape": "^4.4.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-router-dom": "^5.1.2",
    "react-snap": "^1.23.0",
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "@types/react": "*",
    "@types/react-dom": "*",
    "@types/react-router-dom": "*",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.20.0",
    "eslint": "^6.8.0",
    "eslint-config-preshape": "^1.1.0",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.4.0",
    "stylelint": "^13.2.0",
    "stylelint-config-preshape": "^2.0.0",
    "superstatic": "^6.0.4"
  },
  "reactSnap": {
    "crawl": false,
    "include": [
      "/"
    ],
    "source": "public",
    "minifyHtml": {
      "collapseWhitespace": false,
      "removeComments": false
    }
  }
}
